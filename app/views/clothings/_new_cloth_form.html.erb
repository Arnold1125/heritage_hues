<div class="booking-card-container shadow-lg border rounded p-4">
    <h3 class="fw-bold text-primary mb-3">
      Create a new listing
    </h3>
    <%= simple_form_for @clothing do |f| %>
      <div class="form-group">
        <%= f.input :name, label: 'Name', error: 'name is mandatory, please specify one' %>
      </div>

      <div class="form-group">
        <%= f.input :price %>
      </div>

      <div class="form-group">
        <%= f.input :size %>
      </div>

      <div class="form-group">
        <%= f.input :description %>
      </div>

      <div class="form-group">
        <%= f.input :color %>
      </div>

      <div class="form-group">
        <%= f.input :color %>
      </div>

      <div class="form-group">
        <%= f.submit 'Make listing', class: 'btn btn-primary' %>
      </div>
    <% end %>
</div>
