          <div class="card-trip">
              <%= cl_image_tag clothing.photo.key, alt: "Image of #{clothing.name}" %>          <div class="card-trip-infos">
              <div>
                <h2><%= clothing.name %></h2>
                <p><%= clothing.description %></p>
                <p><%= clothing.country %></p>
              </div>
              <h2 class="card-trip-pricing">Â¥<%= clothing.price %></h2>
            </div>
          </div>
        <% end %>
      <% end %>
      </%= link_to %>
    <% end %>
  </div>
</div>
